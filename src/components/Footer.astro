---
import CallToAction from './CallToAction.astro'
---

<footer>
  <div class="container">
    <h2>Ready to debug your reading list?</h2>
    <CallToAction outline />
    <hr />
    <p>© 2024 – Tech Book Club</p>
  </div>
</footer>

<style>
  footer {
    background:
      url('/images/grid-dark.svg') no-repeat,
      var(--color-neutral-900);
    border-radius: 4rem 4rem 0 0;
    color: var(--color-neutral-100);
    padding: 12rem 4rem 6rem;
    @media (width >= 540px) {
      padding: 16rem 8rem 6rem;
    }
    @media (width >= 1024px) {
      padding-top: 20rem;
    }
  }

  h2 {
    font: 600 8.5rem / 1.3 var(--font-mono);
    letter-spacing: -2px;
    margin-bottom: 10rem;
    max-width: 172rem;
    text-align: center;
  }

  hr {
    border-color: var(--color-neutral-700);
    margin-block: 16rem 6rem;
    width: 100%;
  }

  p {
    font: 3.5rem / 1.2 var(--font-mono);
    letter-spacing: -1px;
    text-align: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    @media (width >= 540px) {
      align-items: center;
    }
  }

  @container (width >= 540px) {
    h2 {
      font-size: 12.5rem;
      text-wrap: pretty;
    }
  }
</style>
