---
import Rating from './Rating.astro'
---

<section>
  <Rating />
  <blockquote>
    <p>
      "This book club transformed my technical reading from a solitary activity
      into an enriching community experience. The discussions are gold!"
    </p>
  </blockquote>
  <p>
    <cite>Sarah Chen, Software Architect</cite>
  </p>
</section>

<style>
  section {
    margin-block: 16rem;
    @media (width >= 540px) {
      margin-block: 20rem;
    }
    @media (width >= 1024px) {
      text-align: center;
    }
    @media (width >= 1280px) {
      margin-block: 30rem;
    }
    img {
      width: 7rem;
    }
  }

  blockquote {
    color: var(--color-neutral-900);
    font: 600 6rem / 1.1 var(--font-mono);
    letter-spacing: -1px;
    margin: 8rem auto;
    max-width: 242.5rem;
    @media (width >= 540px) {
      font-size: 8.5rem;
      line-height: 1.3;
    }
  }

  cite {
    font-style: normal;
  }
</style>
