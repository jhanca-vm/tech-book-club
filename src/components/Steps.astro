---
import { Image } from 'astro:assets'
import arrow from '../assets/arrow.svg'
import Glow from './Glow.astro'

const list = [
  'Choose your membership tier',
  'Get your monthly book selection',
  'Join our discussion forums',
  'Attend exclusive meetups'
]
---

<section>
  <div>
    <h2>Your tech reading journey</h2>
    <ol>
      {
        list.map((item, index) => (
          <li>
            <div>
              <span>{index + 1}</span>
              {index < list.length - 1 && <Image src={arrow} alt="" />}
            </div>
            {item}
          </li>
        ))
      }
    </ol>
  </div>
  <Glow />
</section>

<style>
  section {
    background:
      url('/images/grid.webp') no-repeat,
      var(--color-neutral-100);
    border-radius: 3rem;
    overflow: hidden;
    padding: 20rem 15rem;
    position: relative;
    & > div {
      position: relative;
      z-index: 1;
    }
    .glow {
      top: -40px;
      right: -512px;
    }
  }

  h2 {
    line-height: 1.2;
    margin: 0 auto 16rem;
    text-align: center;
    width: 128rem;
  }

  ol {
    display: grid;
    color: var(--color-neutral-900);
    font: 600 4.5rem / 1.3 var(--font-mono);
    gap: 12rem;
    grid-auto-flow: column;
    letter-spacing: -0.01em;
    list-style: none;
    div {
      display: flex;
      justify-content: space-between;
      margin-bottom: 6rem;
    }
  }

  span {
    border: 2px solid var(--color-neutral-900);
    border-radius: 1rem;
    display: grid;
    font-size: 6rem;
    font-weight: 400;
    height: 10rem;
    line-height: 1;
    place-items: center;
    width: 10rem;
  }

  @container (width < 284rem) {
    section {
      display: none;
    }
  }
</style>
